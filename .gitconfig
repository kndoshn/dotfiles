[user]
    # name = Your Name
    # email = your@email.com

[init]
    defaultBranch = main

[core]
    excludesfile = ~/.gitignore_global
    editor = vim
    autocrlf = input
    quotepath = false
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    dark = true
    side-by-side = true
    line-numbers = true

[pull]
    rebase = false

[push]
    default = current
    autoSetupRemote = true

[fetch]
    prune = true

[merge]
    ff = false
    conflictStyle = zdiff3

[alias]
    st = status -sb
    co = checkout
    br = branch -a
    lg = log --oneline --decorate --graph

[color]
    ui = auto
