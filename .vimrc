set runtimepath+=~/.ghq/github.com/sheerun/vim-polyglot/
filetype plugin indent on
set backspace=indent,eol,start
set shiftwidth=2
set tabstop=2
set expandtab
set clipboard+=unnamed

" Encoding
set encoding=utf-8
set fenc=utf-8
set fileformats=unix,dos,mac

" Appearance
syntax enable
set number
set cursorline
set display=lastline

" Mouse
set mouse=a
set ttymouse=xterm2

" ESC
inoremap <silent> jj <ESC>
